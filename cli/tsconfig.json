{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./build",
    "target": "ES6",
    "lib": [
      "ES2020"
    ],
    "strictNullChecks": true,
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "es2020",
  },
  "sourceMap": true,
  "include": [
    "./src/**/*.ts"
  ]
}